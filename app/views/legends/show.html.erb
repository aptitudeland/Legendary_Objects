<div>
  <%= render "shared/search_bar" %>
</div>

<div class="main-container">
  <div class="card_object">
      <div class="card_info">
        <h2><%= @legend.name %> </h2>
      </div>
    <div class="card_image">
      <%= cl_image_tag @legend.photos.last.key, class: "image" %>
    </div>

<%# redimensionner les images des cards %>

 <div class="card_info">
      <div class="cards_2_trips">
        <p><%= @legend.description %></p>
        <br>
        <p><%= @legend.category  %> </p>
        <p><%= @legend.price %> €/jour</p>
      </div>
      </div>
  </div>

      <%# completer avec la photo et ajuster sur card_show_legend %>

      <%# coller un stickit dessus afin quelle suive le mouvement de la page  %>
      <div class="card-trip" data-controller="total-resa" data-price = "<%=@legend.price %>">
        <div class="card-trip-infos">
          <%= simple_form_for @reservation do |f| %>
            <div class="form-inputs">
              <h2>Louer cette légende !</h2>
              <%= f.input :starting_date,html5:true, input_html: {data:{total_resa_target:"start",action:"input->total-resa#calculate"} } %>
              <%= f.input :ending_date,html5:true, input_html: {data:{total_resa_target:"end",action:"input->total-resa#calculate"} } %>
              <%= f.hidden_field :legend_id, value: @legend.id %>
          <p data-total-resa-target="total"></p><br>
            </div>
              <div class="form-actions" id="btn-gradient" >
              <%= f.button :submit, "Book !"%>
            </div>
            <br>
            <div id="warning">Attention : l’application n’est pas juridiquement responsable en cas de destruction d’immeuble ou de l’univers.  </div>
          <% end %>
        </div>
        </div>
      </div>
    </div>
  </div>
</div>
