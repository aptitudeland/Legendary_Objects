<%= link_to "Back to the list", legends_path %>
<div>
<h2><%= @legend.name %></h2>
<p><%= @legend.description %></p>
<p><%= @legend.price %>€/jour</p>
<p><%= @legend.category %></p>
</div>

<div class="card-trip">
  <div class="card-trip-infos">
    <h2>Book this legend</h2>
<%= simple_form_for @reservation do |f| %>
  <div class="form-inputs">
    <%= f.input :starting_date, as: :string, input_html: { type: 'date' } %>
    <%= f.input :ending_date, as: :string, input_html: { type: 'date' } %>
    <%= f.hidden_field :legend_id, value: @legend.id %>
    <div class="card-trip-pricing"><%= @legend.price %>€/jour</div>
  </div>
    <div class="form-actions" id="btn-gradient">
    <%= f.button :submit, "Book !" %>
  </div>
<% end %>
  <div id="warning">Attention : l’app n’est pas responsable juridiquement en cas de destruction d’immeuble ou de l’univers.  </div>
  </div>
  </div>
</div>

<p><%= link_to "Delete",
legend_path(@legend),
data: {turbo_method: :delete, turbo_confirm: "Are you really really really sure ????"}
 %> </p>
