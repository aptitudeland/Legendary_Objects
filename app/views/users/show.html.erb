<div class= "card-product">
<h1><%= @user.first_name %></h1>
<h1><%= @user.last_name %></h1>
</div>

<div class= "cards-container">
  <% @legends.each do |legend| %>
    <div class= "cards">
    <%# IMAGE A AJOUTER %>
      <h4>OBJET : <%= legend.name %></h4>
      <p>DESCRIPTION : <%= legend.description %></p>
      <p>CATEGORIE : <%= legend.category %></p>
      <p>PRICE : <%= legend.price %>€</p>
    </div>
  <% end %>
</div>

<h1><%= "MES RESERVATIONS" %></h1>
<ul>
  <% @reservations.each do |reservation| %>
    <li>
      <h4><%= reservation.legend.name %> (Propriétaire : <%= reservation.legend.user.first_name %> <%= reservation.legend.user.last_name %>)</h4>
      <p> date de <%= reservation.starting_date %></p>
      <p><%= reservation.ending_date %></p>
    </li>
  <% end %>
</ul>
